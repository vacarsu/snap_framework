<%= graph font_size: 20 %>

<%= component :button, "test", id: :test_btn, translate: {200, 20} %>

<%= primitive :text,
    "selected value #{@state.dropdown_value}",
    id: :dropdown_value_text,
    translate: {20, 80}
%>

<%= component :button_list, "", id: :button_list, translate: {20, 200} do %>
    <%= for button <- ["btn 1", "btn 2", "btn 3"] do %>
        <%= slot :button, button %>
    <% end %>
<% end %>

<%= component :dropdown, {
        @state.dropdown_opts,
        @state.dropdown_value
    },
    id: :dropdown,
    translate: {20, 20}
%>
