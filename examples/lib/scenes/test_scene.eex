<%= graph font_size: 20 %>

<%= layout padding: 100, width: 600, height: 600, translate: {100, 10} do %>
    <%= component Examples.Component.Button, "button", id: "button" %>
    <%= for button <- @buttons do %>
        <%= component Examples.Component.Button, button, id: button %>
    <% end %>

    <%= layout padding: 0, width: 700, height: 300, translate: {0, 0} do %>
        <%= component Scenic.Component.Input.Dropdown, {
                @dropdown_opts,
                @dropdown_value
            },
            id: :dropdown_1
        %>

        <%= component Scenic.Component.Input.Dropdown, {
                @dropdown_opts,
                @dropdown_value
            },
            id: :dropdown_2
        %>
    <% end %>
<% end %>

