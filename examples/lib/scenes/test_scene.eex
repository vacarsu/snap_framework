<%= graph font_size: 20 %>

<%= component Examples.Component.Button, "test btn", id: :test_btn, translate: {200, 20} %>

<%= primitive Text,
    "selected value #{@state.dropdown_value}",
    id: :dropdown_value_text,
    translate: {20, 80}
%>

<%= component Examples.Component.ButtonList, nil, id: :button_list, translate: {20, 200} do %>
    <%= component Examples.Component.Button, "button 1", translate: {0, 0} %>
    <%= component Examples.Component.Button, "button 2", translate: {110, 0} %>
    <%= component Examples.Component.Button, "button 3", translate: {220, 0} %>
<% end %>

<%= component Dropdown, {
        @state.dropdown_opts,
        @state.dropdown_value
    },
    id: :dropdown,
    translate: {20, 20}
%>
